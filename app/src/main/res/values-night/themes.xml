<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Organizze" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:colorBackground">@color/headerBackground</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textGray</item>

        <item name="colorError">@color/error</item>

        <item name="materialAlertDialogTheme">@style/RoundedAlertDialogTheme</item>
    </style>


    <style name="despesaTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccentDespesa</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDespesa</item>
        <item name="colorAccent">@color/colorAccentDespesa</item>
    </style>

    <style name="receitaTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccentReceita</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkReceita</item>
        <item name="colorAccent">@color/colorAccentReceita</item>
    </style>


    <style name="RoundedAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="shapeAppearance">@style/RoundedDialogBase</item>
        <item name="colorSurface">@color/colorBackgroundDialog</item>
    </style>

    <style name="RoundedDialogBase" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="CustomPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>
