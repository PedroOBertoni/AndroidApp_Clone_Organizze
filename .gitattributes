# Normaliza finais de linha (bom para evitar conflitos entre Windows/Linux)
* text=auto eol=lf

# Força que arquivos Java sejam reconhecidos como Java (por padrão já é)
*.java linguist-language=Java

# Garante que arquivos XML sejam tratados como HTML
*.xml linguist-language=HTML

# Arquivos de layout ou recursos Android que não devem contar como código:
app/src/main/res/** linguist-detectable=false

# Ignora arquivos de build e configs automáticas
*.gradle linguist-generated=true
*.iml linguist-generated=true
.gradle/** linguist-generated=true
.idea/** linguist-generated=true
build/** linguist-generated=true
out/** linguist-generated=true

# Ignora arquivos de tradução, manifestos e JSONs de configuração
*.json linguist-generated=true
*.yml linguist-generated=true
*.yaml linguist-generated=true
*.properties linguist-generated=true
*.md linguist-documentation=true
